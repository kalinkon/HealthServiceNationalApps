<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="MenuTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- For main menu -->
        <item name="colorPrimary">@color/colorMenu</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkMenu</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>
    <style name="SubMenuDiseaseLisTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- For DiseaseList and Hospital list -->
        <item name="colorPrimary">@color/colorPrimaryDiseaseList</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDarkDiseaseList</item>
        <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="AppThemeDiseaseContent" parent="Theme.AppCompat.Light.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimaryContent</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDarkContent</item>
    <item name="colorAccent">@color/colorAccent</item>


    </style>

    <style name="MineCustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">22sp</item>
    </style>


</resources>
